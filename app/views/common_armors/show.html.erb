  <dt><%= t("common.armor.special",            :class=>"col-md-4")%></dt> <dd class="text-left"><%= @armor.special %></dd>
  <dt><%= t("common.source",            :class=>"col-md-4")%></dt> <dd class="text-left"><%= @armor.source.name %></dd>
  <dt><%= t("common.categories",        :class=>"col-md-4")%></dt> <dd class="text-left"><%= @armor.armor_category.name%></dd>
