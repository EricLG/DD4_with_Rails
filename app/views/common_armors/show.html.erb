  <dt><%= t("common.armor.name",       :class=>"col-md-4")%></dt> <dd class="text-left"><%= @armor.name %></dd>
  <dt><%= t("common.weight",     :class=>"col-md-4")%></dt> <dd class="text-left"><%= @armor.weight %></dd>
  <dt><%= t("common.price",      :class=>"col-md-4")%></dt> <dd class="text-left"><%= @armor.price %></dd>
  <dt><%= t("common.armor.armor_bonus",     :class=>"col-md-4")%></dt> <dd class="text-left"><%= @armor.armor_bonus %></dd>
