<dl class="dl-horizontal">
  <%= form_for [:object, @armor] do |f| %>
  <dt><%= f.label :name,        t("common.name"),        :class=>"col-md-4" %></dt>
  <dd><%= f.text_field :name,       :class=>"col-md-5" %></dd>
  <dt><%= f.label :weight,      t("common.weight"),      :class=>"col-md-4" %></dt>
  <dd><%= f.text_field :weight,     :class=>"col-md-5" %></dd>
  <dt><%= f.label :price,       t("common.price"),       :class=>"col-md-4" %></dt>
  <dd><%= f.text_field :price,      :class=>"col-md-5" %></dd>
  <dt><%= f.label :armor_bonus,      t("common.armor.armor_bonus"),      :class=>"col-md-4" %></dt>
  <dd><%= f.text_field :armor_bonus,     :class=>"col-md-5" %></dd>
  <dt><%= f.label :min_alteration_bonus,    t("common.armor.min_alte_bonus"),    :class=>"col-md-4" %></dt>
  <dd><%= f.text_field :min_alteration_bonus,   :class=>"col-md-5" %></dd>
  <dt><%= f.label :skill_malus,       t("common.armor.skill_malus"),       :class=>"col-md-4" %></dt>
  <dd><%= f.text_field :skill_malus,      :class=>"col-md-5" %></dd>
  <dt><%= f.label :ms_malus,       t("common.armor.ms_malus"),       :class=>"col-md-4" %></dt>
  <dd><%= f.text_field :ms_malus,      :class=>"col-md-5" %></dd>
  <dt><%= label_tag :special,t("common.armor.special"),  :class=>"col-md-4" %></dt>
  <dd><%= f.text_field :special,      :class=>"col-md-5" %></dd>

  <% default_category = @armor.armor_category_id.nil? ? nil : @armor.armor_category.id %>
  <dt><%= f.label :armor_category_id, t("common.categories"), :class=>"col-md-4" %></dt>
  <dd><%=f.select :armor_category_id, options_from_collection_for_select(@armor_categories, :id, :name, default_category), {include_blank: true}, {multiple: false, :class => "col-md-5"} %></dd>

  <% default_source = @armor.source_id.nil? ? nil : @armor.source.id %>
  <dt><%= f.label :source_id, t("common.source"), :class=>"col-md-4" %></dt>
  <dd><%=f.select :source_id, options_from_collection_for_select(@sources, :id, :name, default_source), {include_blank: true}, {multiple: false, :class => "col-md-5"} %></dd>

  <p class="col-md-4"><%= f.submit t("common.validate") %></p>
  <% end %>
</dl>
