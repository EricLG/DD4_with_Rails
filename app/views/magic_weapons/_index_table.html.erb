<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info weapons, {model: "Armes magiques"} %>
    </div>
    <%= will_paginate weapons, :container => false %>
</div>

<div class="table-responsive">
  <table  class="table table-striped table-bordered table-hover">
    <tr>
      <th class="col-sm-1"><%= t('magic.name')            %></th>
      <th class="col-sm-1"><%= t('common.weapon_groups')  %></th>
      <th class="col-sm-1"><%= t('magic.level_min')       %></th>
      <th class="col-sm-1"><%= t('magic.property')        %></th>
      <th class="col-sm-1"><%= t('magic.power')           %></th>
      <th class="col-sm-1"><%= t('magic.rarity')           %></th>
      <th class="col-sm-1"><%= t('magic.source')          %></th>
    </tr>
  <% weapons.each do |w| %>
    <tr>
      <td><%= link_to w.name, object_magic_weapon_path(w.id)  %></td>
      <td><%= display_weapon_group(w.weapon_groups) %></td>
      <td><%= w.object_level_ids.min %> </td>
      <td><%= display_first_words w.property %> </td>
      <td><%= display_first_words w.power %> </td>
      <td><%= w.rarity %> </td>
      <td><%= w.source.name %> </td>
      <!-- <td><%= link_to 'x', object_magic_weapon_path(w.id), method: :delete %></td> -->
    </tr>
  <% end %><!-- Fin communs -->
  </table>
</div>

<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info weapons, {model: "Armes magiques"} %>
    </div>
    <%= will_paginate weapons, :container => false %>
</div>
