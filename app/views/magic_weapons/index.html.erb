<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "sidebloc/objects_menu" %>
<% end %>
<div class="row">
<h3 class="col-sm-12"><%= t('magic.weapon.title_index') %></h3>
</div>


<div class="row">
<% if @weapons.empty? %>
  <p class="col-sm-5"><%= t('common.no_result') %></p>
<% else %>
  <div class="col-sm-12">
    <%= render "index_table", weapons: @weapons %>
  </div>
<% end %> <!-- Fin if -->
</div>


<div class="row">
<p class="col-sm-5"><%= link_to t('magic.weapon.new_weapon'), new_object_magic_weapon_path %></p>
</div>
