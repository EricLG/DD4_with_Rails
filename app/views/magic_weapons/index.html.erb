<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "sidebloc/objects_menu" %>
<% end %>
<div class="row">
<h3 class="col-sm-12"><%= t('magic.weapon.title_index') %></h3>
</div>

<div>
  <%= form_for @search, url: object_magic_weapons_path, method: :get do |form| %>
    <%= form.label(:name, "Nom:") %>
    <%= form.text_field(:name) %>

    <%= form.label(:object_levels, "Alteration max:") %>
    <%= form.text_field(:object_levels) %>

    <%= form.label(:weapon_groups, "Groupes d'arme:") %>
    <%= form.select :weapon_groups, options_from_collection_for_select(@weapon_groups, :id, :name),{:include_blank => 'Tous'}, {:multiple => true, :size => 3}  %>

    <%= form.label(:source, "Source:") %>
    <%= form.select :source, options_from_collection_for_select(@sources, :id, :name), {:include_blank => 'Tous'}, {:multiple => false}  %>

    <%= form.submit("Search") %>
  <% end %>
</div>


<div class="row">
<% if @weapons.empty? %>
  <p class="col-sm-5"><%= t('common.no_result') %></p>
<% else %>
  <div class="col-sm-12">
    <%= render "index_table", weapons: @weapons %>
  </div>
<% end %> <!-- Fin if -->
</div>


<div class="row">
<p class="col-sm-5"><%= link_to t('magic.weapon.new_weapon'), new_object_magic_weapon_path %></p>
</div>
