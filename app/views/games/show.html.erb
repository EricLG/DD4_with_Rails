<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "campaigns/campaign_menu" %>
<% end %>

<div class="row">
    <div class="col-sm-8">
        <h2><%= @game.name %> <small>le <%= @game.played.in_time_zone("Europe/Paris").strftime("%d/%m/%Y") %></small></h2>
        <br>
        <%= simple_format @game.description, class: "well" %>
        <% if current_user_admin? || @game.game_master?(@current_user) %>
            <p><%= link_to "Modifier la partie", edit_campaign_game_path(@campaign, @game.id) %></p>
        <% end %>

        <h3>Illustrations</h3>
        <% if @game.illustrations.empty? %>
            <div>
                <p>Aucune illustrations.</p>
            </div>
        <% else %>
            <div class="my-gallery" >
            <% @game.illustrations.each_with_index do |image, i| %>
               <figure>
                    <%= link_to(
                            image_tag(image.thumb.url, class: "media-object img-responsive ", alt: @game.illustrations_identifiers[i]),
                            image.url,
                            { title:
                            @game.illustrations_identifiers[i] , "data-size": image.dimensions })
                    %>
                    <figcaption class="text-center"><small><%= @game.illustrations_identifiers[i] %></small></figcaption>
                </figure>
            <% end %>
            </div>
        <% end %>

        <h3>Debriefing</h3>
        <% if @game.comments.empty? %>
            <p>Il n'y a actuellement aucun commentaires</p>
        <% else %>
            <%= render @game.comments %>
        <% end %>
        <% if @current_user %>
            <%= render 'comments/form' %>
        <% else %>
            <p>Connectez-vous pour Ã©crire un commentaire.</p>
        <% end %>
    </div>
    <div class="col-sm-4">
        <%= render "campaigns/games_list" %>
    </div>
</div>

<%= render "layouts/photoswipe" %>
