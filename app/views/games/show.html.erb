<div class="jumbotron">
    <h2>Partie du <%= @game.played.in_time_zone("Europe/Paris").strftime("%d/%m/%Y") %></h2>
    <br>
    <p><%= simple_format @game.description %></p>
</div>

<div class="comment">
    <% if @game.comments.empty? %>
        <p>Il n'y a actuellement aucun commentaires</p>
    <% else %>
        <p>Commentaires :</p>
        <br>
        <%= render @game.comments %>
    <% end %>
</div>

<div class="row">
    <% if @current_user %>
        <hr />
        <%= render 'comments/form' %>
    <% else %>
        <p>Connectez-vous pour Ã©crire un commentaire.</p>
    <% end %>
</div>

