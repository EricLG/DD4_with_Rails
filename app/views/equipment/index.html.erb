<%# Sidebloc content %>
<% content_for :sidebloc do %>
  <%= render "characters/characters_list" %>
<% end %>

<h1>Liste des Ã©quipements</h1>

  <table  class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Magicitem Id</th>
      <th>Character ID</th>
      <th>Location Id</th>
      <th>Level</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @equipments.each do |e| %>
    <tr>
      <td><%= e.id %></td>
      <td><%= e.item_name %></td>
      <td><%= e.hero_name %></td>
      <td><%= e.location_name %></td>
      <td><%= e.level %></td>
      <td>
        <%= link_to 'Modifier', edit_equipment_path(e.id), class: "btn btn-warning" %>
        <%= link_to 'Vendre', equipment_path(e.id), method: :delete, data: { confirm: "Vendre l'equipement ?" }, class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>

  </tbody>

</table>

<%= link_to 'Retour au personnage', character_path(params['character_id']), class: "btn btn-default" %>
