  <table  class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Magicitem Id</th>
      <th>Character ID</th>
      <th>Location Id</th>
      <th>Level</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @equipments.each do |e| %>
    <tr>
      <td><%= e.id %></td>
      <td><%= e.magic_item_id %></td>
      <td><%= e.character_id %></td>
      <td><%= e.location_id %></td>
      <td><%= e.level %></td>
      <td><%= link_to 'Supprimer', equipment_path(e.id), method: :delete, data: { confirm: "Supprimer l'equipement ?" }, class: "btn btn-danger" %></td>
    </tr>
    <% end %>

  </tbody>

</table>
