<%= form_for :user, {url: '/login', :class => 'form-inline'} do |f| %>

  <div class="form-group">
      <%= f.label :email, User.human_attribute_name('email')  %>
      <%= f.email_field :email, size: 60, :class=>"form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :password, User.human_attribute_name('password') %>
      <%= f.password_field :password, size: 60, :class=>"form-control" %>
  </div>

  <%= f.submit t("common.validate"), :class => "btn btn-primary" %>

<% end %>
