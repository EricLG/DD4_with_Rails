<table  class="table table-striped table-bordered table-hover">
  <tr>
    <th class="col-md-1"><%= CommonArmor.human_attribute_name(:name)            %></th>
    <th class="col-md-1"><%= localize_bonus_type(commons.first) %></th>
    <th class="col-md-1"><%= CommonArmor.human_attribute_name(:min_alte_bonus)   %></th>
    <th class="col-md-1"><%= CommonArmor.human_attribute_name(:skill_malus)      %></th>
    <th class="col-md-1"><%= CommonArmor.human_attribute_name(:ms_malus)         %></th>
    <th class="col-md-1"><%= CommonArmor.human_attribute_name(:price)                  %></th>
    <th class="col-md-1"><%= CommonArmor.human_attribute_name(:weight)                 %></th>
    <th class="col-md-1"><%= CommonArmor.human_attribute_name(:special)          %></th>
    <th class="col-md-1"><%= CommonArmor.human_attribute_name(:source)                 %></th>
  </tr>
<% commons.each do |co| %>
  <tr>
    <td><%= link_to co.name, items_common_armor_path(co.id)  %></td>
    <td><%= co.armor_bonus          %></td>
    <td><%= co.min_alteration_bonus %></td>
    <td><%= co.skill_malus          %></td>
    <td><%= co.ms_malus             %></td>
    <td><%= co.price                %></td>
    <td><%= co.weight               %></td>
    <td><%= co.special              %></td>
    <td><%= co.source.name          %></td>
  </tr>
<% end %>
</table>
