<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info consumables, model: Consumable.model_name.human %>
    </div>
    <%= will_paginate consumables, :container => false %>
</div>

<div class="table-responsive">
  <table  class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="col-sm-1"><%= Consumable.human_attribute_name("name") %></th>
        <th class="col-sm-1"><%= Consumable.human_attribute_name("kind") %></th>
        <th class="col-sm-1"><%= Consumable.human_attribute_name("property") %></th>
        <th class="col-sm-1"><%= Consumable.human_attribute_name("power") %></th>
        <th class="col-sm-1"><%= Consumable.human_attribute_name("source") %></th>
      </tr>
    </thead>

  <tbody>
    <% @consumables.each do |consumable| %>
      <tr>
        <td><%= link_to consumable.name, items_consumable_path(consumable) %></td>
        <td><%= t("consumables.kind.#{consumable.kind}") %></td>
        <td><%= display_first_words(consumable.property) %></td>
        <td><%= display_first_words(consumable.power) %></td>
        <td><%= consumable.source.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info consumables, model: Consumable.model_name.human %>
    </div>
    <%= will_paginate consumables, :container => false %>
</div>
