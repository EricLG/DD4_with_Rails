<div class="table-responsive">
  <table  class="table table-striped table-bordered table-hover">
    <tr>
      <th class="col-sm-1"><%= CommonWeapon.human_attribute_name("name")               %></th>
      <th class="col-sm-1"><%= CommonWeapon.human_attribute_name("proficiency")        %></th>
      <th class="col-sm-1"><%= CommonWeapon.human_attribute_name("damage")             %></th>
      <th class="col-sm-1"><%= CommonWeapon.human_attribute_name("range")              %></th>
      <th class="col-sm-1"><%= CommonWeapon.human_attribute_name("price")              %></th>
      <th class="col-sm-1"><%= CommonWeapon.human_attribute_name("weight")             %></th>
      <th class="col-sm-1"><%= CommonWeapon.human_attribute_name("weapon_groups")      %></th>
      <th class="col-sm-1"><%= CommonWeapon.human_attribute_name("weapon_properties")  %></th>
      <th class="col-sm-1"><%= CommonWeapon.human_attribute_name("source")             %></th>
    </tr>
    <% commons.each do |co| %>
    <tr>
      <td><%= link_to co.name, items_common_weapon_path(co.id)  %></td>
      <td><%= co.proficiency %>  </td>
      <td><%= co.damage %>    </td>
      <td><%= co.range %>     </td>
      <td><%= co.price %>     </td>
      <td><%= co.weight %>     </td>
      <td>
        <% co.weapon_groups.each do |g| %>
          <p><%= g.name %></p>
        <% end %>
      </td>
      <td>
        <% unless co.weapon_properties.empty? %>
          <% co.weapon_properties.each do |p| %>
            <span class="property" data-placement='top' data-toggle="popover" data-trigger="hover" data-content="<%= p.description %>" data-title="<%= p.name %>" ><%= p.name %></span>
          <% end %>
        <% end %>
      </td>
      <td><%= co.source.name %></td>
    </tr>
    <% end %><!-- Fin communs -->
  </table>
</div>
