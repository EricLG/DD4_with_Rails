<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "items/items_side_menu" %>
<% end %>

<div class="row">
  <h3 class="col-md-12"><%= t('.title_index') %></h3>
</div>

<div class="row">
  <div class="col-sm-12">
    <% @sorted_weapons.each do |category, weapons_with_handed| %>
      <h4> <%= category %></h4>
        <% weapons_with_handed.each do |handed, commons| %>
        <h5><%= CommonWeapon.human_attribute_name(handed) %></h5>
          <%= render "weapon_index_table", commons: commons %>
        <% end %>
    <% end %>
  </div>
</div>
