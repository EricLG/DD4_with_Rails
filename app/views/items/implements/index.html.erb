<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "items/items_side_menu" %>
<% end %>

<div class="row">
  <h3 class="col-md-12"><%= t('.title_index') %></h3>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table  class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th class="col-sm-1">Nom</th>
            <th class="col-sm-1">Focaliseur supérieur</th>
            <th class="col-sm-1">Propriétés</th>
          </tr>
          </thead>
          <% @implements.each do |i| %>
            <tr>
              <td><%= link_to i.name, items_implement_path(i.id)  %></td>
              <td><%= i.superior %>  </td>
              <td>
                <% unless i.implement_properties.empty? %>
                  <% i.implement_properties.each do |p| %>
                    <span class="property" data-placement='top' data-toggle="popover" data-trigger="hover" data-content="<%= p.description %>" data-title="<%= p.name %>" ><%= p.name %></span>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>
