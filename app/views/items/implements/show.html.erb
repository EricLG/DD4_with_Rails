<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "items/items_side_menu" %>
<% end %>

<div class="row">
  <h3 class="col-md-12"><%= link_to t('.title_show', implement: @implement.name), edit_items_implement_path(@implement.id) %> </h3>
</div>
<div class="row">
  <dl class="dl-horizontal">
    <dt>Nom</dt> <dd class="text-left"><%= @implement.name %></dd>
    <dt>Prix</dt> <dd class="text-left"><%= @implement.price %></dd>
    <dt>Poids</dt> <dd class="text-left"><%= @implement.weight %></dd>
    <dt>Type</dt> <dd class="text-left"><%= @implement.ig_name %></dd>
    <dt>Focaliseur supérieur</dt> <dd class="text-left"><%= @implement.superior %></dd>
    <dt>Propriétés</dt><dd class="text-left"><%= @properties %>
    </dd>
  </dl>
</div>
