<h4>Recherchez vos monstres et ajoutez-les Ã  votre rencontre</h4>
<%= form_for @search, url: ajax_search_dm_tools_monsters_path, method: :get, html: {class: 'form-horizontal', remote: true, data: {type: "json"}} do |form| %>

  <%= form.hidden_field :level, value: 1 %>

  <div class="row">
    <div class="form-group col-xs-6">
      <%= form.label(:main_role, Monster.human_attribute_name('main_role'), :class=>"control-label col-sm-4") %>
      <div class="col-sm-8">
        <%= form.select :main_role, Monster::MAIN_ROLE.collect{|r| [r, r]}, {:include_blank => 'Tous'}, {:class=>"select_form form-control"} %>
      </div>
    </div>

    <div class="form-group col-xs-6">
      <%= form.label(:second_role, Monster.human_attribute_name('second_role'), :class=>"control-label col-sm-4") %>
      <div class="col-sm-8">
        <%= form.select :second_role, Monster::SECOND_ROLE.collect{|r| [r, r]}, {:include_blank => 'Tous'}, {:class=>"select_form form-control"} %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-6">
      <%= form.label(:race, Monster.human_attribute_name('race'), :class=>"control-label col-sm-4") %>
      <div class="col-sm-8">
        <%= form.select :race, Monster::RACE.collect{|r| [r, r]}, {:include_blank => 'Toutes'}, {:class=>"select_form form-control"} %>
      </div>
    </div>

    <div class="form-group col-xs-6">
      <%= form.label(:origin, Monster.human_attribute_name('origin'), :class=>"control-label col-sm-4") %>
      <div class="col-sm-8">
        <%= form.select :origin, Monster::ORIGIN.collect{|o| [o, o]}, {:include_blank => 'Toutes'}, {:class=>"select_form form-control"} %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-6">
      <%= form.label(:leader, Monster.human_attribute_name('leader'), :class=>"control-label col-sm-4") %>
      <div class="col-sm-8">
        <%= form.select :leader, options_for_select([["Oui", true], ["Non", false]]), {:include_blank => 'Tous'}, {:class=>"select_form form-control"}  %>
      </div>
    </div>

  </div>

<% end %>
