<%= form_tag "#", class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag(:monster, Monster.model_name.human, class: "col-sm-4 control-label") %>
    <div class="col-sm-8">
      <%= select_tag :monster, options_from_collection_for_select(@monsters, :id, :show_level_name, :nil), class: "select-monster", :include_blank => true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= button_tag "Ajouter ce monstre", id: "add_monster", type: "button", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
