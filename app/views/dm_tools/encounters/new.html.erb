<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "sidebloc/dm_tools_menu" %>
<% end %>

<h3>Préparer un nouveau combat !</h3>

<div class="row">
  <h4>Définissez votre budget : <span id="encounter_budget"><%= @budget_encounter %></span> px</h4>

  <div>
    <%= form_tag(calcul_budget_dm_tools_encounters_path, method: :get, remote: true, id: "budget_form", class: 'form-horizontal') do %>
      <div class="form-group">
        <%= label_tag(:party_size, "Nombre de héros", class:"col-sm-2 control-label") %>
        <div class="col-sm-2">
          <%= number_field_tag(:party_size, 5, in: 1..10, step: 1, class:"budget form-control") %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag(:party_level, "Niveau du groupe", class:"col-sm-2 control-label") %>
        <div class="col-sm-2">
          <%= number_field_tag(:party_level, 1, in: 1..30, step: 1, class:"budget form-control") %>
        </div>
      </div>

    <% end %>
  </div>
</div>

<%= link_to 'Liste des rencontres', dm_tools_encounters_path %>
