<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info monsters, {model: Monster.model_name.human(count: monsters.count)} %>
    </div>
    <%= will_paginate monsters, :container => false %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="col-sm-1"><%= Monster.human_attribute_name('name')         %></th>
        <th class="col-sm-1"><%= Monster.human_attribute_name('main_role')    %></th>
        <th class="col-sm-1"><%= Monster.human_attribute_name('second_role')  %></th>
        <th class="col-sm-1"><%= Monster.human_attribute_name('leader')       %></th>
        <th class="col-sm-1"><%= Monster.human_attribute_name('level')        %></th>
        <th class="col-sm-1"><%= Monster.human_attribute_name('category')     %></th>
        <th class="col-sm-1"><%= Monster.human_attribute_name('race')         %></th>
        <th class="col-sm-1"><%= Monster.human_attribute_name('origin')       %></th>
        <th class="col-sm-1"><%= Monster.human_attribute_name('keywords')     %></th>
        <th class="col-sm-1"><%= Monster.human_attribute_name('source')       %></th>
      </tr>
    </thead>
    <tbody>
  <% monsters.each do |m| %>
    <tr>
      <td><%= link_to m.name, dm_tools_monster_path(m.id)  %></td>
      <td><%= m.main_role %> </td>
      <td><%= m.second_role %> </td>
      <td><%= m.leader ? "Oui" : "" %> </td>
      <td><%= m.level %> </td>
      <td><%= m.category %> </td>
      <td><%= m.race %> </td>
      <td><%= m.origin %> </td>
      <td><%= m.keywords %> </td>
      <td><%= m.source.name %> </td>
    </tr>
  <% end %><!-- Fin communs -->
    </tbody>
  </table>
</div>

<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info monsters, {model: Monster.model_name.human(count: monsters.count)} %>
    </div>
    <%= will_paginate monsters, :container => false %>
</div>




