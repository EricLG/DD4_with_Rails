<h2><%= t('user.title_signup') %></h2>

<%= form_for :user, {url: '/users', :class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :name, t("user.name"), :class=>"col-sm-3 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, size: 60, :class=>"form-control" %>
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <%= f.label :email, t("user.email"), :class=>"col-sm-3 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email, size: 60, :class=>"form-control" %>
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <%= f.label :password, t("user.password"), :class=>"col-sm-3 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password, size: 60, :class=>"form-control" %>
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <%= f.label :password_confirmation, t("user.password_confirmation"), :class=>"col-sm-3 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, size: 60, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= f.submit t("common.validate"), :class => "btn btn-primary" %>
      </div>
  </div>

<% end %>
