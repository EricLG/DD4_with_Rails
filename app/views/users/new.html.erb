<h2><%= t('.title_signup') %></h2>

<%= form_for :user, {url: '/users', :class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :name, User.human_attribute_name('name'), :class=>"col-sm-3 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, size: 60, :class=>"form-control" %>
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <%= f.label :email, User.human_attribute_name('email'), :class=>"col-sm-3 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email, size: 60, :class=>"form-control" %>
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <%= f.label :password, User.human_attribute_name('password'), :class=>"col-sm-3 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password, size: 60, :class=>"form-control" %>
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <%= f.label :password_confirmation, User.human_attribute_name('password_confirmation'), :class=>"col-sm-3 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, size: 60, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= f.submit t("common.validate"), :class => "btn btn-primary" %>
      </div>
  </div>

<% end %>
