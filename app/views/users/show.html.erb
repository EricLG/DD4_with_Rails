 <%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "sidebloc/user_menu" %>
<% end %>

 <h3 class="col_sm-12"><%= @current_user.name %> </h3>

 <ul>
  <dt><%= t("user.name",  :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @current_user.name %></dd>
  <dt><%= t("user.email", :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @current_user.email %></dd>
</ul>

<%= link_to t('character.new_character'), new_character_path %>

<p>Ma liste de souhait:</p>
<ul>
<% @current_user.magic_items.each do |item| %>
  <li><%= link_to item.name, items_magic_item_path(item.id) %></li>
<% end %>
</ul>