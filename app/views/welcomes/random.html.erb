

<div class="row">
  <div class="col-sm-12">


<div class="table-responsive">
  <table  class="table table-striped table-bordered table-hover">
    <tr>
      <th class="col-sm-1">Nom</th>
      <th class="col-sm-1">Niveau min</th>
      <th class="col-sm-1">Propriete</th>
      <th class="col-sm-1">Pouvoir</th>
      <th class="col-sm-1">Source</th>
    </tr>
  <% @randomObjects.each do |w| %>
    <tr>
      <td>
          <% if w.class.to_s == 'MagicWeapon' %>
            <%= link_to w.name, object_magic_weapon_path(w.id)  %>
          <% elsif w.class.to_s == 'MagicArmor' %>
            <%= link_to w.name, object_magic_armor_path(w.id)  %>
          <% elsif w.class.to_s == 'MagicGear' %>
            <%= link_to w.name, object_magic_gear_path(w.id)  %>
          <% elsif w.class.to_s == 'MagicImplement' %>
            <%= link_to w.name, object_magic_implement_path(w.id)  %>
          <% end %>
      </td>
      <td><%= w.object_level_ids.min %> </td>
      <td><%= display_first_words w.property %> </td>
      <td><%= display_first_words w.power %> </td>
      <td><%= w.source.name %> </td>
      <!-- <td><%= link_to 'x', object_magic_weapon_path(w.id), method: :delete %></td> -->
    </tr>
  <% end %><!-- Fin communs -->
  </table>
</div>
  </div>
</div>
