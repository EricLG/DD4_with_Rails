  <div class="table-responsive">
    <table  class="table table-striped table-bordered table-hover">
      <tr>
        <th class="col-sm-1"><%= t('magic.weapon.name')       %></th>
        <th class="col-sm-1"><%= t('common.weapon_groups')    %></th>
        <th class="col-sm-1"><%= t('magic.weapon.level_min')  %></th>
        <th class="col-sm-1"><%= t('magic.weapon.property')   %></th>
        <th class="col-sm-1"><%= t('magic.weapon.power')      %></th>
        <th class="col-sm-1"><%= t('magic.destroy')           %></th>
      </tr>
    <% implements.each do |i| %>
      <tr>
        <td><%= link_to i.name, object_magic_implement_path(i.id)  %></td>
        <td>
          <% i.implement_groups.each do |g| %>
            <%= g.name %></br>
          <% end %>
        </td>
        <td><%= i.object_level_ids.min %> </td>
        <td><%= i.property %> </td>
        <td><%= i.power %> </td>
        <td><%= link_to 'x', object_magic_implement_path(i.id), method: :delete %></td><!-- TODO: Mettre icone glyphicon glyphicon-remove-circle -->
      </tr>
    <% end %><!-- Fin communs -->
    </table>
  </div>
