<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info implements %>
    </div>
    <%= will_paginate implements, :container => false %>
</div>

<div class="table-responsive">
  <table  class="table table-striped table-bordered table-hover">
    <tr>
      <th class="col-sm-1"><%= t('magic.name')       %></th>
      <th class="col-sm-1"><%= t('magic.implement_groups')    %></th>
      <th class="col-sm-1"><%= t('magic.level_min')  %></th>
      <th class="col-sm-1"><%= t('magic.property')   %></th>
      <th class="col-sm-1"><%= t('magic.power')      %></th>
      <th class="col-sm-1"><%= t('magic.rarity')      %></th>
      <th class="col-sm-1"><%= t('magic.source')           %></th>
    </tr>
  <% implements.each do |i| %>
    <tr>
      <td><%= link_to i.name, object_magic_implement_path(i.id)  %></td>
      <td>
        <% i.implement_groups.each do |g| %>
          <%= g.name %></br>
        <% end %>
      </td>
      <td><%= i.object_level_ids.min %> </td>
      <td><%= display_first_words i.property %> </td>
      <td><%= display_first_words i.power %> </td>
      <td><%= i.rarity %></td>
      <td><%= i.source.name %></td>
    </tr>
  <% end %><!-- Fin communs -->
  </table>
</div>

<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info implements %>
    </div>
    <%= will_paginate implements, :container => false %>
</div>
