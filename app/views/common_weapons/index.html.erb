<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "sidebloc/objects_menu" %>
<% end %>

<h3 class="col-md-12"><%= t('common.weapon.title_index') %></h3>

  <% @sorted_weapons.each do |category, weapons_with_handed| %>
    <h4> <%= category %></h4>
      <% weapons_with_handed.each do |handed, commons| %>
      <h5><%= handed %></h5>
        <%= render "weapon_index_table", commons: commons %>
      <% end %>
  <% end %>

<br>
<p><%= link_to t('common.weapon.new_weapon'), new_object_common_weapon_path %></p>

