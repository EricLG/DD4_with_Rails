<h4>En cours</h4>
<% if @current_campaigns.blank? %>
  <p>Aucune campagne</p>
<% else %>
  <ul class="list-group padding-left">
    <% @current_campaigns.each do |c| %>
      <li><%= link_to c.name, campaign_path(c.id)%></li>
    <% end %>
  </ul>
<% end %>

