<%= form_for @campaign, {:class => 'form-horizontal'}  do |f| %>

  <div class="form-group">
    <%= f.label :name, t("campaign.name"), :class=>"col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, size: 60, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, t("campaign.description"), :class=>"col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :description, size: 60, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <% default_user = @users.empty? ? nil : @campaign.game_master %>
    <%= f.label :game_master_id, t("campaign.game_master"), :class=>"col-sm-4 control-label" %>
    <div class="col-sm-8">
       <%= f.select :game_master_id, options_from_collection_for_select(@users, :id, :name, default_user),{}, {:class => "form-control"}  %>
    </div>
  </div>

  <p class="col-md-4"><%= f.submit t("common.validate") %></p>
<% end %>
