<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "sidebloc/objects_menu" %>
<% end %>
<div class="row">
<h3 class="col-sm-12"><%= t('magic.amor.title_index') %></h3>
</div>

<div>
  <%= form_for @search, url: object_magic_armors_path, method: :get do |form| %>
    <%= form.label(:name, "Nom:") %>
    <%= form.text_field(:name) %>

    <%= form.label(:object_levels, "Alteration max:") %>
    <%= form.text_field(:object_levels) %>

    <%= form.label(:armor_categories, "CatÃ©gories d'armures:") %>
    <%= form.select :armor_categories, options_from_collection_for_select(@armor_categories, :id, :name),{:include_blank => 'Tous'}, {:multiple => true, :size => 3}  %>

    <%= form.label(:source, "Source:") %>
    <%= form.select :source, options_from_collection_for_select(@sources, :id, :name), {:include_blank => 'Tous'}, {:multiple => false}  %>

    <%= form.submit("Search") %>
  <% end %>
</div>


<div class="row">
<% if @armors.empty? %>
  <p class="col-sm-5"><%= t('common.no_result') %></p>
<% else %>
  <div class="col-sm-12">
    <%= render "index_table", armors: @armors %>
  </div>
<% end %> <!-- Fin if -->
</div>


<div class="row">
<p class="col-sm-5"><%= link_to t('magic.armor.new_armor'), new_object_magic_armor_path %></p>
</div>
