<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "sidebloc/objects_menu" %>
<% end %>

<h3 class="col_sm-12"><%= @consumable.name %> </h3>


<dl class="dl-horizontal">

<dt><%= t(".description", :class=>"col_sm-4")%></dt>  <dd class="text-left"><%= @consumable.description %></dd>
<dt><%= t(".kind",        :class=>"col_sm-4")%></dt>  <dd class="text-left"><%= t("consumables.kind.#{@consumable.kind}") %></dd>
<dt><%= t(".levels",      :class=>"col_sm-4")%></dt>  <dd class="text-left"><%= display_levels(@consumable.object_levels) %></dd>
<dt><%= t(".alteration",  :class=>"col_sm-4")%></dt>  <dd class="text-left"><%= @consumable.alteration %></dd>
<dt><%= t(".property",    :class=>"col_sm-4")%></dt>  <dd class="text-left"><%= @consumable.property %></dd>
<dt><%= t(".power",       :class=>"col_sm-4")%></dt>  <dd class="text-left"><%= @consumable.power %></dd>
<dt><%= t(".special",     :class=>"col_sm-4")%></dt>  <dd class="text-left"><%= @consumable.special %></dd>
<dt><%= t(".source",      :class=>"col_sm-4")%></dt>  <dd class="text-left"><%= @consumable.source.name %></dd>

</dl>

<%= link_to 'Edit', edit_object_consumable_path(@consumable) %> |
<%= link_to 'Back', object_consumables_path %> |

<br>
<%= link_to 'delete', object_consumable_path(@consumable), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }  %>
