<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "sidebloc/objects_menu" %>
<% end %>

<h3 class="col_sm-12"><%= link_to t('magic.gear.title_show', gear: @gear.name), edit_object_magic_gear_path(@gear.id) %> </h3>

<dl class="dl-horizontal">
  <dt><%= t("magic.gear.name",        :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @gear.name %></dd>
  <dt><%= t("magic.gear.description", :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @gear.description %></dd>


<% if  @gear.object_levels.empty? %>
  <dt><%= t("magic.levels", :class=>"col_sm-4") %>    </dt><dd class="text-left"><%= t('common.empty') %></dd>
<% else %>
   <dt><%= t("magic.levels", :class=>"col_sm-4") %>  </dt><dd class="text-left">
    <% @gear.object_levels.each do |l| %>
      <% if @gear.alteration? %>
        <%= "#{l.level} / +#{l.alteration} / #{l.price} PO" %>
      <% else %>
        <%= "#{l.level} / #{l.price} PO" %>
      <% end %>
    <% end %>
    </dd>
<% end %>
<% if  @gear.armor_categories.empty? %>
  <dt><%= t("magic.gear.shield_group", :class=>"col_sm-4") %>   </dt><dd class="text-left"><%= t('common.empty') %></dd>
<% else %>
  <dt><%= t("magic.gear.shield_group", :class=>"col_sm-4") %> </dt><dd class="text-left">
    <% @gear.armor_categories.each do |g| %>
      <%= g.name %>
    <% end %>
  </dd>
<% end %>

  <dt><%= t("magic.gear.location",     :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @gear.location.name %></dd>
  <dt><%= t("magic.gear.alteration",  :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @gear.alteration %></dd>
  <dt><%= t("magic.gear.property",    :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @gear.property %></dd>
  <dt><%= t("magic.gear.power",       :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @gear.power %></dd>
  <dt><%= t("magic.gear.special",     :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @gear.special %></dd>
  <dt><%= t("common.source",            :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @gear.source.name %></dd>
</dl>
