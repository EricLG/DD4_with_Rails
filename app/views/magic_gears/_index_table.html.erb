<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info gears %>
    </div>
    <%= will_paginate gears, :container => false %>
</div>

<div class="table-responsive">
  <table  class="table table-striped table-bordered table-hover">
    <tr>
      <th class="col-sm-1"><%= t('magic.gear.name')       %></th>
      <th class="col-sm-1"><%= t('magic.gear.location')    %></th>
      <th class="col-sm-1"><%= t('magic.gear.level_min')  %></th>
      <th class="col-sm-1"><%= t('magic.gear.property')   %></th>
      <th class="col-sm-1"><%= t('magic.gear.power')      %></th>
      <th class="col-sm-1"><%= t('magic.source')           %></th>
    </tr>
  <% gears.each do |a| %>
    <tr>
      <td><%= link_to a.name, object_magic_gear_path(a.id)  %></td>
      <td><%= a.location.name %> </td>
      <td><%= a.object_level_ids.min %> </td>
      <td><%= display_first_words(a.property) %> </td>
      <td><%= display_first_words(a.power) %> </td>
      <td><%= a.source.name %></td>
    </tr>
  <% end %><!-- Fin communs -->
  </table>
</div>

<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info gears %>
    </div>
    <%= will_paginate gears, :container => false %>
</div>
