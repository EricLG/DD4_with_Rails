  <div class="table-responsive">
    <table  class="table table-striped table-bordered table-hover">
      <tr>
        <th class="col-sm-1"><%= t('magic.gear.name')       %></th>
        <th class="col-sm-1"><%= t('magic.gear.location')    %></th>
        <th class="col-sm-1"><%= t('magic.gear.level_min')  %></th>
        <th class="col-sm-1"><%= t('magic.gear.property')   %></th>
        <th class="col-sm-1"><%= t('magic.gear.power')      %></th>
        <th class="col-sm-1"><%= t('magic.destroy')           %></th>
      </tr>
    <% gears.each do |a| %>
      <tr>
        <td><%= link_to a.name, object_magic_gear_path(a.id)  %></td>
        <td><%= a.location.name %> </td>
        <td><%= a.object_level_ids.min %> </td>
        <td><%= a.property %> </td>
        <td><%= a.power %> </td>
        <td><%= link_to 'x', object_magic_gear_path(a.id), method: :delete %></td><!-- TODO: Mettre icone glyphicon glyphicon-remove-circle -->
      </tr>
    <% end %><!-- Fin communs -->
    </table>
  </div>
