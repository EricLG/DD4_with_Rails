<%= form_for [:object, @gear], {:class => 'form-horizontal'} do |f| %>

  <%= input_text_form(f, :name,         MagicGear.human_attribute_name(:name)) %>
  <%= input_text_form(f, :description,  MagicGear.human_attribute_name(:description)) %>
  <%= input_select_form(f, :object_level_ids,   @levels,            :level, @gear.object_level_ids,   MagicGear.human_attribute_name(:object_level_ids),   {multiple: true}) %>
  <%= input_select_form(f, :armor_category_ids, @armor_categories,  :name,  @gear.armor_category_ids, MagicGear.human_attribute_name(:armor_category_ids), {multiple: true, size: 3}) %>
  <%= input_select_form(f, :location_id,        @locations,         :name,  @gear.location_id,        MagicGear.human_attribute_name(:location_id),        {blank: true}) %>
  <%= input_text_form(f, :alteration,   MagicGear.human_attribute_name(:alteration)) %>
  <%= input_text_form(f, :property,     MagicGear.human_attribute_name(:property)) %>
  <%= input_text_form(f, :power,        MagicGear.human_attribute_name(:power)) %>
  <%= input_text_form(f, :special,      MagicGear.human_attribute_name(:special)) %>
  <%= input_select_form(f, :source_id,          @sources,           :name,  @gear.source_id,          MagicGear.human_attribute_name(:source_id),          {blank: true}) %>
  <%= submit_text_form(f, {add_another: true}) %>

<% end %>
