<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "sidebloc/objects_menu" %>
<% end %>

<h3 class="col-sm-12"><%= @item.name %></h3>

<dl class="dl-horizontal">
  <dt><%= t("magic.description", :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @item.description %></dd>

<% if  @item.object_levels.empty? %>
  <dt><%= t("magic.levels", :class=>"col_sm-4") %>    </dt><dd class="text-left"><%= t('common.empty') %></dd>
<% else %>
   <dt><%= t("magic.levels", :class=>"col_sm-4") %>  </dt><dd class="text-left"><%= display_levels @item.object_levels.order(:level)%></dd>
<% end %>

  <dt><%= t("common.weapon_groups", :class=>"col_sm-4")%></dt> <dd class="text-left"><%= display_weapon_group(@item.weapon_groups) %></dd>
  <dt><%= t("magic.alteration",     :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @item.alteration %></dd>
  <dt><%= t("magic.critical",       :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @item.critical %></dd>
  <dt><%= t("magic.property",       :class=>"col_sm-4")%></dt> <dd class="text-left"><%= simple_format @item.property %></dd>
  <dt><%= t("magic.power",          :class=>"col_sm-4")%></dt> <dd class="text-left"><%= simple_format @item.power %></dd>
  <dt><%= t("magic.special",        :class=>"col_sm-4")%></dt> <dd class="text-left"><%= simple_format @item.special %></dd>
  <dt><%= t("common.source",        :class=>"col_sm-4")%></dt> <dd class="text-left"><%= @item.source.name %></dd>
</dl>

<%= link_to t('magic.weapon.edit_weapon', weapon: @item.name), edit_object_magic_item_path(@item.id) %>
