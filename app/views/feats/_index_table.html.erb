<%# Sidebloc content%>
<% content_for :sidebloc do %>
 <%= render "sidebloc/feats_menu" %>
<% end %>


<div class="row">
  <h3 class="col-sm-12"><%= t("feat.title_index") %></h3>
</div>
<div class="table-responsive">
  <table  class="table table-striped table-bordered table-hover">
    <tr>
      <th class="col-sm-1"><%= t('feat.name')       %></th>
      <th class="col-sm-1"><%= t('feat.category')    %></th>
      <th class="col-sm-1"><%= t('feat.stat')  %></th>
      <th class="col-sm-1"><%= t('feat.avantage')      %></th>
      <th class="col-sm-1"><%= t('feat.destroy')           %></th>
    </tr>
  <% feats.each do |a| %>
    <tr>
      <td><%= link_to a.name, feat_path(a.id)  %></td>
      <td><%= a.category%> </td>
      <td><%= a.stat %> </td>
      <td><%= a.avantage %> </td>
      <td><%= link_to 'x', object_magic_gear_path(a.id), method: :delete %></td><!-- TODO: Mettre icone glyphicon glyphicon-remove-circle -->
    </tr>
  <% end %><!-- Fin communs -->
  </table>
</div>

