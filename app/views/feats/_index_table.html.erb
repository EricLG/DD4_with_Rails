<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info feats %>
    </div>
    <%= will_paginate feats, :container => false %>
</div>

<div class="table-responsive">
  <table  class="table table-striped table-bordered table-hover">
    <tr>
      <th class="col-sm-1"><%= t('feat.name')       %></th>
      <th class="col-sm-1"><%= t('feat.klass')      %></th>
      <th class="col-sm-1"><%= t('feat.race')      %></th>
      <th class="col-sm-1"><%= t('feat.avantage')      %></th>
      <th class="col-sm-1"><%= t('feat.Source')      %></th>
    </tr>
  <% feats.each do |a| %>
    <tr>
      <td><%= link_to a.name, feat_path(a.id)  %></td>
      <td><%= a.klasses %> </td>
      <td><%= a.races %> </td>
      <td><%= display_first_words a.avantage %> </td>
      <td><%= a.source.name %> </td>
    </tr>
  <% end %><!-- Fin communs -->
  </table>
</div>

<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info feats %>
    </div>
    <%= will_paginate feats, :container => false %>
</div>
