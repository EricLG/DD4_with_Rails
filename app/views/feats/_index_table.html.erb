<%# Sidebloc content%>
<% content_for :sidebloc do %>
 <%= render "sidebloc/feats_menu" %>
<% end %>

  <div class="table-responsive">
    <table  class="table table-striped table-bordered table-hover">
      <tr>
        <th class="col-sm-1"><%= t('feat.name')       %></th>
        <th class="col-sm-1"><%= t('feat.categorie')    %></th>
        <th class="col-sm-1"><%= t('feat.stat')  %></th>
        <th class="col-sm-1"><%= t('feat.prequisite')   %></th>
        <th class="col-sm-1"><%= t('feat.avantage')      %></th>
        <th class="col-sm-1"><%= t('feat.destroy')           %></th>
      </tr>
    <% feats.each do |a| %>
      <tr>
        <td><%= link_to a.name, object_magic_gear_path(a.id)  %></td>
        <td><%= a.location.name %> </td>
        <td><%= a.object_level_ids.min %> </td>
        <td><%= a.property %> </td>
        <td><%= a.power %> </td>
        <td><%= link_to 'x', object_magic_gear_path(a.id), method: :delete %></td><!-- TODO: Mettre icone glyphicon glyphicon-remove-circle -->
      </tr>
    <% end %><!-- Fin communs -->
    </table>
  </div>

