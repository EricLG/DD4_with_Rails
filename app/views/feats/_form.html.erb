<%= form_for @feat, {:class => 'form-horizontal'} do |f| %>

  <%= input_text_form(f, :name,         MagicImplement.human_attribute_name(:name)) %>
  <%= input_select_form_without_collection(f, :category, Feat::CATEGORY, Feat.human_attribute_name(:category), {size: 3}) %>
  <%= input_text_field_form(f, :avantage, Feat.human_attribute_name(:avantage)) %>
  <%= input_text_field_form(f, :errata,   Feat.human_attribute_name(:errata)) %>
  <%= input_select_form(f, :prerequisited_race_ids,           @races,           :name, @feat.prerequisited_race_ids,          Feat.human_attribute_name(:prerequisited_race_ids),           {blank: true, multiple: true}) %>
  <%= input_select_form(f, :prerequisited_klass_ids,          @klasses,         :name, @feat.prerequisited_klass_ids,         Feat.human_attribute_name(:prerequisited_klass_ids),          {blank: true, multiple: true, size: 3}) %>
  <%= input_select_form(f, :prerequisited_klass_feature_ids,  @klass_features,  :name, @feat.prerequisited_klass_feature_ids, Feat.human_attribute_name(:prerequisited_klass_feature_ids),  {blank: true, multiple: true, size: 3}) %>
  <%= input_select_form(f, :source_id,                        @sources,         :name, @feat.source_id,                       Feat.human_attribute_name(:source_id),                        {blank: true}) %>
  <%= submit_text_form(f, {add_another: true}) %>

<% end %>
