  <div class="panel-group col-sm-4" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">

      <div class="panel-heading" role="tab" id="h_heroic">
        <h4 class="panel-title">
        <% collapse_id = 'heroic' %>
