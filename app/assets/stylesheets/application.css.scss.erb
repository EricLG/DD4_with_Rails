.background {
  background: linear-gradient(to bottom, lightgrey 2%, white) no-repeat;
  padding-right: 0px;
  padding-left: 0px;
}

.page {
  background: white;
}

.header {
  background-image: url(<%= asset_path "header/header.png" %>);
  margin: 0px;
}

.header a:hover {
  color: white ;
}

.white-text {
  color:white;
}

.firebrick {
  color: firebrick;
}

.black-bg {
  background-color: black;
  border-radius: 0px;
}
.bg {
  background: linear-gradient(to right, #d5cbb4 -20%, white) no-repeat;
  border-radius: 0px !important;
}

.no-margin {
  margin: 0px;
}
.no-padding {
  padding: 0px;
}

.flash {
  padding-left: 20px;
}

.account {
  background: lightgrey;
}

.simple-text {
  font-weight: normal;
}
.bold {
  font-weight: 900;
}

.opacite {
  opacity: 0.5;
}

.rounded {
  width: 30px;
  height: 30px;
  line-height: 30px; /* adjust line height to align vertically*/
  padding:0;
  border-radius: 50%;
}

.padding-left {
  padding-left: 10px;
}

.margin-right {
  margin-right: 12px;
}

.size-comment {
  width: 65px;
  height: 65px;
}

.inline-block {
  display: inline-block;
}

.inline {
  display: inline;
}

.box {
  border: 1px solid black;
}

.underline::after {
  content: '';
  display: block;
  width: 75%;
  border-bottom: 1px solid black;
}

.width-5 {
  width: 5%;
}
.width-8 {
  width: 8%;
}
.width-10 {
  width: 10%;
}
.width-15 {
  width: 15%
}
.width-20 {
  width: 20%;
}
.width-80 {
  width:  80%;
}
.width-max {
  width:  100%;
}
.width-fix-50 {
  width:  60px;
}
.width-fix-100 {
  width:  120px;
}

.thin-text {
  font-size: 90%;
  line-height: 10px !important;
}

.large-text {
  font-size: 110%;
}

.v-center {
  vertical-align: middle !important;
}

.table-auto {
  width: auto;
}
