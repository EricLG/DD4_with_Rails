<%# Sidebloc content%>
<% content_for :sidebloc do %>
  <%= render "sidebloc/object" %>
<% end %>

<h3 class="col-md-12"><%= t('common.weapon.title_index') %></h3>

<% if @communs.empty? %>
  <p><%= t('common.weapon.no_weapon') %></p>
<% else %>
  <% @cat.each do |c| %>
    <%= render "table", commons: @communs, category: c, two_handed: false %>
    <%= render "table", commons: @communs, category: c, two_handed: true %>
  <% end %><!-- Fin cat -->
<% end %> <!-- Fin if -->

<br>
<p><%= link_to t('common.weapon.new_weapon'), new_object_common_weapon_path %></p>
