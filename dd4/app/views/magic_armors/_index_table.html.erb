  <div class="table-responsive">
    <table  class="table table-striped table-bordered table-hover">
      <tr>
        <th class="col-sm-1"><%= t('magic.armor.name')       %></th>
        <th class="col-sm-1"><%= t('common.armor_properties')    %></th>
        <th class="col-sm-1"><%= t('magic.armor.level_min')  %></th>
        <th class="col-sm-1"><%= t('magic.armor.property')   %></th>
        <th class="col-sm-1"><%= t('magic.armor.power')      %></th>
        <th class="col-sm-1"><%= t('magic.destroy')           %></th>
      </tr>
    <% armors.each do |a| %>
      <tr>
        <td><%= link_to a.name, object_magic_armor_path(a.id)  %></td>
        <td>
          <% a.armor_categories.each do |c| %>
            <p><%= c.name %></p>
          <% end %>
        </td>
        <td><%= a.object_level_ids.min %> </td>
        <td><%= a.property %> </td>
        <td><%= a.power %> </td>
        <td><%= link_to 'x', object_magic_armor_path(a.id), method: :delete %></td><!-- TODO: Mettre icone glyphicon glyphicon-remove-circle -->
      </tr>
    <% end %><!-- Fin communs -->
    </table>
  </div>
